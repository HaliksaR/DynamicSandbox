<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".SplashFragment">

		<FrameLayout
			android:id="@+id/child_fragment_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/splitInstallerView"/>

		<ru.shiftlaboratory.libraries.splitinstaller.view.component.SplitInstallerComponent
			android:layout_margin="20dp"
			android:id="@+id/splitInstallerView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:titleText="Скачайте Модули "
			app:descriptionText="Скачайте Модули "
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
